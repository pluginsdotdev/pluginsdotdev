{
  "name": "@pluginsdotdev/react-host",
  "version": "0.0.1",
  "description": "Plugins.dev lets you allow users to safely add 3rd party plugins to your site. This is the package for react plugin hosts.",
  "keywords": [
    "React",
    "plugins",
    "end-user",
    "programming"
  ],
  "author": "Adam Berger <adam@plugins.dev>",
  "homepage": "https://plugins.dev",
  "license": "AGPL-3.0-only OR LicenseRef-COMMERCIAL-LICENSE.md",
  "main": "dist/index.js",
  "module": "dist/index.es5.js",
  "directories": {
    "lib": "src",
    "test": "tests"
  },
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "browserify": {
    "transform": [
      "loose-envify"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pluginsdotdev/pluginsdotdev.git"
  },
  "scripts": {
    "test": "tsc --module commonjs && rollup --config rollup.config.ts && npx jest",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'tests/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && npm run gen-flow-types && rollup --config rollup.config.ts",
    "gen-flow-types": "for i in $(find dist/types/ -type f -name \"*.d.ts\"); do echo \"${i}\"; npx flowgen \"$i\" --output-file \"dist/lib/${i##dist/types/}.js.flow\"; done",
    "build-docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/pluginsdotdev/pluginsdotdev/issues"
  },
  "dependencies": {
    "@pluginsdotdev/bridge": "file:../bridge",
    "@pluginsdotdev/sanitizers": "file:../sanitizers",
    "@pluginsdotdev/style-types": "file:../style-types",
    "@pluginsdotdev/style-utils": "file:../style-utils",
    "murmurhash-js": "^1.0.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@pluginsdotdev/react-plugin": "file:../react-plugin",
    "@pluginsdotdev/test-utils": "file:../test-utils"
  },
  "peerDependencies": {
    "react": "16.x"
  }
}
